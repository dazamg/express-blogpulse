<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>

<hr />

<% article.comments.forEach(function(comment) { %>

  <div class="well">
    <h2>Name:
      <%= comment.name %> 
    </h2>
  </div>
<% }) %>
<form action="/articles/:id/comments" method="POST">
  <div class="form-group">
    <label for="commentName">Name</label>
    <input type="text" class="form-control" id="commentName" name="commentName" required>
  </div>

  <div class="form-group">
    <label for="commentContent">Comment</label>
    <input type="text" class="form-control" id="commentContent" name="commentContent" required>
    </textarea>
  </div>
  <input type="submit" class="btn btn-primary">
</form>

<a href="/">&larr; Back Home</a>

